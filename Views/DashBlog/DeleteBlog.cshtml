@model DentistApp.Models.Blog


@{
    ViewData["Title"] = "Delete-Blog";
}


    <div class="container mx-auto max-w-3xl py-20 px-8">
       <h1 class="font-serif text-3xl md:text-4xl pb-4">Blog Post Detail</h1>
       <h1 class="font-serif text-xl pb-4 underline">
           <a asp-controller="Dashblog" asp-action="Dashboard">Return to Home</a>
       </h1>
       <div class="container mx-auto max-w-3xl ">
            <form asp-action="DeleteBlogs" method="post" class="mx-auto">
                 <input asp-for="Id" class="hidden"/>
                @* <h1 class="font-serif text-xl pb-4 underline text-red-600">Delete</h1> *@
                <button type="submit" class="font-serif text-xl pb-4 underline text-red-600">Delete</button>
            </form>
            <h1 class="font-serif text-xl pb-4 text-blue-600 underline">
                <a asp-action="Dashboard">Cancel Delete</a>
            </h1>
        </div>

    </div>